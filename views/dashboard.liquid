{% layout "index.liquid" %}

{% block script %}
<script src="js/dashboard.js" type="module"></script>
{% endblock %}

{% block leftContent %}
<div>
  <div class="streaming-container">
    <p>Streaming from {{ user }}'s Spotify</p>
    <img src="images/signal.gif">
  </div>
  <a href="/auth/login?show_dialog=true">Not you?</a>
</div>
{% endblock %}

{% if title and artists and albumURL and colors %}
  {% block title %}{{ title }}{% endblock %}
  {% block artists %}{{ artists }}{% endblock %}
  {% block albumURL %}{{ albumURL }}{% endblock %}
{% endif %}

{% block error %}
  {{ error }}
{% endblock %}