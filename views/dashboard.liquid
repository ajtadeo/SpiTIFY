{% layout "index.liquid" %}

{% block leftContent %}
<div>
  <p>Streaming from {{ user }}'s Spotify</p>
  <a href="/login">Not you?</a>
</div>
{% endblock %}

{% if title and artists and albumURL %}
  {% block title %}{{ title }}{% endblock %}
  {% block artists %}{{ artists }}{% endblock %}
  {% block albumURL %}{{ albumURL }}{% endblock %}
{% endif %}